{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "acrName": {
      "type": "string"
    }
  },
  "variables": {
    "script": "[concat('( sleep 5 ; az login --identity ; az acr import --name ', parameters('acrName'), ' --source akmgcloud.azurecr.io/cdi-ejb-calculator:latest --image cdi-ejb-calculator:latest )')]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "name": "[concat(parameters('siteName'), '-aci')]",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "containers": [
          {
            "name": "[concat(parameters('siteName'),'-aci')]",
            "properties": {
              "command": [
                "sh",
                "-c",
                "[variables('script')]"
              ],
              "image": "mcr.microsoft.com/azure-cli:latest",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 1
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Never"
      }
    }
  ],
  "outputs": {
    "principalId": {
      "type": "string",
      "value": "[reference(concat(resourceId('Microsoft.ContainerInstance/containerGroups', concat(parameters('siteName'), '-aci')), '/providers/Microsoft.ManagedIdentity/Identities/default'),'2015-08-31-PREVIEW').principalId]"
    }
  }
}
